{
  "name": "@astariaxyz/v1-core",
  "private": true,
  "version": "1.0.0",
  "homepage": "https://astaria.xyz",
  "repository": "https://github.com/AstariaXYZ/v1-core.git",
  "license": "BUSL-1.1",
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=18.12.2"
  },
  "devDependencies": {
    "husky": "^8.0.0"
  },
  "scripts": {
    "build:bench": "npx hardhat compile && npx hardhat typechain",
    "bench": "npx hardhat test",
    "build": "git submodule && forge install && forge build",
    "test": "forge test",
    "deploy": "export IS_FORK=true; forge script Deploy --rpc-url http://localhost:8545 -vvvvv --broadcast",
    "env-test": "LOAN_ID=$(echo ${1}) echo $LOAN_ID",
    "generate-loans": "forge script SeedScript -s 'generate()' --rpc-url http://localhost:8545 -vvvvv --broadcast --ffi",
    "recall-loan": "forge script SeedScript -s 'recall(uint256)' --rpc-url http://localhost:8545 -vvvvv --broadcast --ffi",
    "repay-loan": "forge script SeedScript -s 'repay(uint256)' --rpc-url http://localhost:8545 -vvvvv --broadcast --ffi",
    "settle-loan": "forge script SeedScript -s 'settle(uint256)' --rpc-url http://localhost:8545 -vvvvv --broadcast --ffi",
    "recall": "wrap () { export LOAN_ID=${1} && forge script SeedScript -s 'recall()' --rpc-url http://localhost:8545 -vvvvv --broadcast --ffi }; wrap",
    "debug": "forge script script/Debug.sol:Debug --rpc-url http://localhost:8545 -vvvvv --broadcast",
    "coverage": "forge coverage",
    "fmt": "forge fmt",
    "prepare": "husky install",
    "snapshot": "forge snapshot --diff --no-match-path *fuzz*"
  }
}
